              <a class="empty-box filled" href="/sites/e4d4<%= user.resume %>">
                <img src="/sites/e4d4/assets/img/resume-icon.png" alt="">
                <h5>Click to View Resume</h5>
              </a>
              </div>
            </div>
            <% } %>
            <% if(!user.coverLetter) { %>
            <div class="col-lg-6 col-12">
              <label class="empty-box" for="cover-letter-upload">
                <input type="file" name="coverLetter" id="cover-letter-upload" accept="application/pdf">
                <img src="/sites/e4d4/assets/img/empty.png" alt="">
                <h5>Upload Your coverLetter</h5>
