          <div class="row g-0">
            <div class="col-lg-8 col-12 panel">
              <div class="info-item-l h-100">
                <h6 class="fw-bold">About
                  <button type="button" data-bs-toggle="modal" data-bs-target="#edit-profile-about" class="edit-btn">
                    <i class="bi bi-pencil-square"></i>
                  </button>
                  <% if(user.about){ %>
                  <p>
                  <p class="text-muted">
                    <%= user.about %>
